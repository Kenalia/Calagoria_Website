<div class="container justify-content-center">
    <%= form_for(@session_recap, html: {class: 'form-horizontal'})  do |f| %>
        <ul>
        <% @session_recap.errors.full_messages.each do |error| %>
            <li><%= error %></li>
        <% end %>
        </ul>
        <div class="field form-group">
            <%= f.label :title, class: 'col-sm-2 control-label' %>
            <div class="col-sm-10">
                <%= f.text_field :title, class: 'form-control' %>
            </div>
        </div>

        <div class="field form-group">
            <%= f.label :played_on, class: 'col-sm-2 control-label' %>
            <div class="col-sm-10">
                <%= f.date_field :played_on, class: 'col-sm-12', "data-provide" => 'datepicker' %>
            </div>
        </div>

        <div class="field form-group">
            <%= f.label :body, class: 'col-sm-2 control-label' %>
            <div class="col-sm-10">
                <%= f.text_area :body, class: 'form-control' %>
            </div>
        </div>
        <div class="actions form-group">
            <div class="col-sm-offset-5 col-sm-7">
                <%= f.submit %>
            </div>
        </div>
    <% end %>
</div>